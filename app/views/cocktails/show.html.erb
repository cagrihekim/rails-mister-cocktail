<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<%= dose.ingredient.name %>
<%= dose.description %>
<%= dose.input :photo, as: :file %>
<% end %>

<%#= cl_image_tag @cocktail.photo.key  %>

<%= render './doses/form' %>
<%= link_to "<< All Cocktails", cocktails_path %>

<% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %> of <%= dose.ingredient.name %>
  <%= link_to "Remove", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" },
    class: 'ml-3 text-danger'
   %>
   </li>
  <%end %>
